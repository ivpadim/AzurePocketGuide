<mvvm:MvvmAppBase x:Class="Microsoft.AzurePocketGuide.App"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:local="using:Microsoft.AzurePocketGuide"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  d1p1:Ignorable="d"
                  xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  RequestedTheme="Light"
                  xmlns:mvvm="using:Microsoft.Practices.Prism.Mvvm"
                  xmlns:converters="using:Microsoft.AzurePocketGuide.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/Icons.xaml" />
                <ResourceDictionary Source="Assets/Styles.xaml" />
                <ResourceDictionary>
                    <converters:IconConverter x:Key="IconConverter" />
                    <converters:LowerCaseConverter x:Key="LowerCaseConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</mvvm:MvvmAppBase>